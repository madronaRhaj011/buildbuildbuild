<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://js.stripe.com/v3/"></script> <!-- Stripe Library -->
</head>

<body class="bg-gray-100 text-gray-800">
  <div class="max-w-4xl mx-auto py-12">
    <!-- Header -->
    <h1 class="text-4xl font-bold text-center text-gray-900 mb-8">Checkout</h1>

    <!-- Billing Details -->
    <% billing.forEach(billing => { %>
    <section class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Billing Information</h2>
      <p class="mb-3"><span class="font-medium">Name:</span> <%= billing.fullname %></p>
      <p class="mb-3"><span class="font-medium">Address:</span> <%= billing.address %></p>
      <p><span class="font-medium">Contact:</span> <%= billing.contact %></p>
    </section>
    <% }) %>

    <!-- Selected Items -->
    <section class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Items for Checkout</h2>
      <ul class="divide-y divide-gray-200">
        <% items.forEach(item => { %>
        <li class="py-5 flex justify-between items-center">
          <div>
            <h3 class="text-lg font-semibold text-gray-900"><%= item.name %></h3>
            <p class="text-sm text-gray-500">Quantity: <%= item.quantity %></p>
            <p class="text-sm text-gray-500">Price: &#8369;<%= item.price %></p>
          </div>
          <p class="text-lg font-semibold text-gray-800">Total: &#8369;<%= item.price * item.quantity %></p>
        </li>
        <% }) %>
      </ul>
    </section>

    <!-- Order Summary -->
    <section class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Order Summary</h2>
      <div class="flex justify-between items-center mb-4">
        <span class="text-gray-600">Subtotal:</span>
        <input
          type="text"
          name="subtotal"
          id="subtotal"
          value="<%= subtotalEl %>"
          class="w-1/2 p-2 bg-gray-50 border border-gray-300 rounded-lg text-right"
          readonly
        />
      </div>
      <div class="flex justify-between items-center mb-4">
        <span class="text-gray-600">Tax:</span>
        <input
          type="text"
          name="tax"
          id="tax"
          value="<%= taxEl %>"
          class="w-1/2 p-2 bg-gray-50 border border-gray-300 rounded-lg text-right"
          readonly
        />
      </div>
      <div class="flex justify-between items-center">
        <span class="text-gray-800 font-semibold text-lg">Total:</span>
        <input
          type="text"
          name="total"
          id="total"
          value="<%= totalEl %>"
          class="w-1/2 p-2 bg-gray-50 border border-gray-300 rounded-lg text-right font-bold text-gray-900"
          readonly
        />
      </div>
    </section>

    <!-- Payment Section -->
    <section class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Payment Information</h2>
      <form id="payment-form">
        <div id="card-element" class="p-4 bg-gray-50 border border-gray-300 rounded-lg mb-4">
          <!-- Stripe will mount the Card Element here -->
        </div>
        <div id="card-errors" role="alert" class="text-red-500 text-sm mb-4"></div>
        <button id="submit-button"
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-8 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
          Pay Now
        </button>
      </form>
    </section>
  </div>

  <script>
    // Initialize Stripe
    const stripe = Stripe('pk_test'); // Replace with your Stripe public key
    const elements = stripe.elements();
    const cardElement = elements.create('card');
    cardElement.mount('#card-element');
    // Frontend
const totalEl = parseFloat(document.getElementById('total').value); // Ensure total is a float

// Handle form submission
const form = document.getElementById('payment-form');
form.addEventListener('submit', async (event) => {
  event.preventDefault();
  
  try {
    // Fetch the client secret from the backend
    const response = await fetch('/create-payment-intent', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ amount: Math.round(totalEl * 100) }), // Convert PHP to cents
    });
    
    const { clientSecret } = await response.json();
    if (!clientSecret) throw new Error('Failed to create Payment Intent');

    // Confirm the payment
    const { error } = await stripe.confirmCardPayment(clientSecret, {
      payment_method: {
        card: cardElement,
      },
    });

    if (error) {
      document.getElementById('card-errors').textContent = error.message;
    } else {
      alert('Payment Successful!');
      form.reset();
    }
  } catch (err) {
    console.error(err);
    document.getElementById('card-errors').textContent = 'An error occurred. Please try again.';
  }
});

  </script>
</body>

</html>
