<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #ffc107; /* Yellow */
            --secondary-color: #FFF; /* White */
            --dark-gray: #333;
            --light-gray: #F7F7F7;
            --font-sans: 'Poppins', Arial, sans-serif;
            --cream:#fff3cd;
        }

        body {
            margin: 0;
            background-color: var(--cream);
            font-family: var(--font-sans);
            color: var(--dark-gray);
            overflow-x: hidden;
        }

        /* Navigation Bar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--primary-color);
            color: var(--secondary-color);
            position: relative;
        }

        .navbar h2 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-icons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .navbar-icons a {
            font-size: 1.5rem;
            color: var(--secondary-color);
            text-decoration: none;
            position: relative;
            transition: color 0.3s;
        }

        .navbar-icons a:hover {
            opacity: 0.8;
        }

        /* Search Bar */
        .search-bar {
            margin: 10px;
            display: flex;
            justify-content: center;
        }

        .search-input {
            width: 80%;
            padding: 10px;
            border: 1px solid var(--dark-gray);
            border-radius: 25px;
            outline: none;
        }

        .search-button {
            background-color: var(--primary-color);
            color: var(--secondary-color);
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            margin-left: -5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .search-button:hover {
            background-color: #E5C100; /* Darker Yellow */
        }

        /* Main Content Area */
        .main-content {
            padding: 20px;
        }

        .section-header {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: var(--dark-gray);
        }

        /* Product Grid */
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }

        .product-card {
            background-color: var(--secondary-color);
            border-radius: 10px;
            padding: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-card img {
            width: 100%;
            height: 100px;
            border-radius: 10px;
            object-fit: cover;
        }

        .product-card h4 {
            margin: 10px 0 5px;
            font-size: 1.1rem;
        }

        .product-card p {
            color: var(--primary-color);
            font-weight: bold;
        }

        .add-to-cart {
            background-color: var(--primary-color);
            color: var(--secondary-color);
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-to-cart:hover {
            background-color: #E5C100; /* Darker Yellow */
        }

        /* Bottom Navigation Bar */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: var(--primary-color);
            display: flex;
            justify-content: space-around;
            padding: 10px 0;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
        }

        .bottom-nav a {
            color: var(--secondary-color);
            text-decoration: none;
            font-size: 1.2rem;
            text-align: center;
        }

        .bottom-nav a i {
            display: block;
            margin-bottom: 5px;
        }

        /* Responsive Styles */
        @media (max-width: 600px) {
            .navbar h2 {
                font-size: 1.2rem;
            }
            .navbar-icons a {
                font-size: 1.2rem;
            }
            .search-input {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <div class="navbar">
        <h2>Louie and Fhey Hardware and Construction Supply</h2>
        <div class="navbar-icons">
            <a href="/cart" id="cartIcon"><i class="fa-solid fa-shopping-cart"></i></a>
            <a href="/profile" id="profileIcon"><i class="fa-solid fa-user"></i></a>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" class="search-input" placeholder="Search for products...">
        <button class="search-button"><i class="fa-solid fa-search"></i></button>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <h1 class="section-header">Featured Products</h1>
        <div class="product-grid">
            <div class="product-card">
                <img src="https://via.placeholder.com/150" alt="Product Image">
                <h4>Product Name</h4>
                <p>$10.00</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/150" alt="Product Image">
                <h4>Another Product</h4>
                <p>$20.00</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/150" alt="Product Image">
                <h4>More Products</h4>
                <p>$15.00</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/150" alt="Product Image">
                <h4>Cool Stuff</h4>
                <p>$25.00</p>
                <button class="add-to-cart">Add to Cart</button>
            </div>
            <!-- Add more product cards as needed -->
        </div>
    </div>

    <!-- Bottom Navigation Bar -->
    <div class="bottom-nav">
        <a href="/categories"><i class="fa-solid fa-th-list"></i>Categories</a>
        <a href="/order"><i class="fa-solid fa-box"></i>Orders</a>
    </div>

    <script>
        // Profile Dropdown Toggle
        const profileIcon = document.getElementById('profileIcon');
        const profileDropdown = document.getElementById('profileDropdown');

        profileIcon.addEventListener('click', (event) => {
            event.stopPropagation();
            profileDropdown.style.display =
                profileDropdown.style.display === 'block' ? 'none' : 'block';
        });

        // Cart Modal Toggle
        const cartIcon = document.getElementById('cartIcon');
        const cartModal = document.getElementById('cartModal');
        const closeCart = document.getElementById('closeCart');

        cartIcon.addEventListener('click', (event) => {
            event.stopPropagation();
            cartModal.classList.toggle('show');
        });

        closeCart.addEventListener('click', () => {
            cartModal.classList.remove('show');
        });

        // Search Overlay Toggle
        const searchIcon = document.getElementById('searchIcon');
        const searchOverlay = document.getElementById('searchOverlay');

        searchIcon.addEventListener('click', (event) => {
            event.stopPropagation();
            searchOverlay.style.display = 'flex';
        });

        searchOverlay.addEventListener('click', (e) => {
            if (e.target === searchOverlay) {
                searchOverlay.style.display = 'none';
            }
        });

        // Close dropdown if clicked outside
        window.addEventListener('click', (e) => {
            if (e.target !== profileIcon && e.target !== profileDropdown) {
                profileDropdown.style.display = 'none';
            }
        });
    </script>
</body>
</html>
