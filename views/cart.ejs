<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" type="image/x-icon" href="../tool.png">
</head>
<body class="bg-gray-50 pt-20 overscroll-none">
  <%- include('partials/nav') %>
  <div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-10 text-center">Shopping Cart</h1>
    <div class="lg:flex lg:space-x-8">
  
      <!-- Cart Items -->
      <div id="cart-items" class="lg:w-2/3 space-y-6 bg-white border border-gray-200 rounded-lg p-6 shadow-md">
        <!-- Select All Checkbox -->
        <div class="flex items-center mb-4">
          <input type="checkbox" id="select-all" class="w-5 h-5">
          <label for="select-all" class="ml-2 text-lg text-gray-700">Select All</label>
        </div>
    
        <% cartItem.forEach(item => { %>
          <div class="cart-item flex items-center bg-white border border-gray-200 rounded-lg p-6 shadow-md" 
               data-price="<%= item.price %>" 
               data-cart-id="<%= item.cart_id %>" 
               data-name="<%= item.name %>" 
               data-product-id="<%= item.product_id %>">
            <input type="checkbox" class="select-item w-5 h-5 mr-4">
            <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-24 h-24 object-cover rounded-md mr-6">
            <div class="flex-grow">
              <h2 class="text-xl font-semibold text-gray-800"><%= item.name %></h2>
              <p class="text-gray-500">Quantity:</p>
              <div class="flex items-center mt-2 space-x-4">  
                <input type="number" class="quantity w-16 border border-gray-300 rounded-md p-2 text-gray-700 focus:ring-indigo-500 focus:border-indigo-500" value="<%= item.quantity %>" min="1" readonly>
                <button class="remove-item text-red-500 hover:text-red-700 text-lg"><a href="/delete-cart-items/<%= item.cart_id %>">&times;</a></button>
                <button class="edit-item text-blue-500 hover:text-blue-700 text-lg" data-cart-id="<%= item.cart_id %>"><img src="../edit.png" alt="Edit" width="15px" height="15px"></button>
              </div>
            </div>
            <p class="text-lg font-semibold text-gray-800 ml-6">&#8369;<%= item.totalPrice %></p>
          </div>
        <% }) %>
      </div>
    
      <!-- Order Summary -->
      <div class="bg-white p-6 rounded-lg shadow-md mt-8 lg:mt-0 lg:w-1/3 space-y-6">
        <h2 class="text-2xl font-semibold mb-4 text-gray-800 text-center">Order Summary</h2>
        <div class="flex justify-between border-b border-gray-200 pb-3 text-gray-700">
          <span class="font-medium">Subtotal</span>
          <span class="font-semibold text-gray-900">&#8369;<span id="subtotal">0.00</span></span>
        </div>
        <div class="flex justify-between border-b border-gray-200 pb-3 text-gray-700">
          <span class="font-medium">Shipping Estimate</span>
          <span class="font-semibold text-gray-900">&#8369;<span id="shipping">800.00</span></span>
        </div>
        <div class="flex justify-between border-b border-gray-200 pb-4 text-gray-700">
          <span class="font-medium">Tax Estimate</span>
          <span class="font-semibold text-gray-900">&#8369;<span id="tax">0.00</span></span>
        </div>
        <div class="flex justify-between text-xl font-semibold text-gray-800 pt-4">
          <span>Total</span>
          <span>&#8369;<span id="total">0.00</span></span>
        </div>
        <button class="checkout w-full bg-indigo-600 text-white rounded-lg py-3 mt-6 font-semibold hover:bg-indigo-700 transition">Checkout</button>
      </div>
      
    </div>
  </div>

  <!-- Modal for Editing Quantity -->
  <div id="editModal" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white p-8 rounded-lg w-80">
      <form action="/update-quantity" method="post">
        <h2 class="text-2xl font-bold mb-4 text-gray-800">Edit Quantity</h2>
        <p id="productInfo" class="text-gray-700 mb-4"></p>
        <input type="hidden" name="price" id="price">
        <input type="hidden" name="product_id" id="productId">
        <input type="hidden" name="cart_id" id="cartId">
        <input type="number" id="quantity" name="quantity" class="w-full border border-gray-300 rounded-md p-2 mb-4" min="1">
        <div class="flex justify-end space-x-4">
          <button id="cancelButton" type="button" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400">Cancel</button>
          <button id="updateButton" type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">Update</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const cartItems = document.getElementById('cart-items');
    const subtotalEl = document.getElementById('subtotal');
    const taxEl = document.getElementById('tax');
    const totalEl = document.getElementById('total');
    const shippingCost = 5.00;
    const taxRate = 0.08;
    const selectAllCheckbox = document.getElementById('select-all');
    const selectItemCheckboxes = document.querySelectorAll('.select-item');

    // Handle Select All
    selectAllCheckbox.addEventListener('change', () => {
      const isChecked = selectAllCheckbox.checked;
      selectItemCheckboxes.forEach(checkbox => checkbox.checked = isChecked);
      updateTotals();
    });

    // Handle individual item selection
    selectItemCheckboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateTotals);
    });

    let currentEditItem = null;

    // Show modal and set the current item
    cartItems.addEventListener('click', (event) => {
      if (event.target.closest('.edit-item')) {
        currentEditItem = event.target.closest('.cart-item');
        
        // Get the product details
        const productName = currentEditItem.getAttribute('data-name');
        const cartId = currentEditItem.getAttribute('data-cart-id');
        const productId = currentEditItem.getAttribute('data-product-id');
        const price = currentEditItem.getAttribute('data-price');
        const quantity = currentEditItem.querySelector('.quantity').value;

        // Update the modal content
        document.getElementById('productInfo').textContent = `${productName} (ID: ${cartId})`;
        document.getElementById('cartId').value = cartId; // Pass ID to the form
        document.getElementById('productId').value = productId; // Pass ID to the form
        document.getElementById('price').value = price; // Pass ID to the form
        document.getElementById('quantity').value = quantity;

        // Show the modal
        document.getElementById('editModal').classList.remove('hidden');
      }
    });

    // Update quantity on modal confirmation
    document.getElementById('updateButton').addEventListener('click', () => {
      const quantity = parseInt(document.getElementById('quantity').value);
      if (quantity > 0) {
        currentEditItem.querySelector('.quantity').value = quantity;
        updateTotals();
      }
      document.getElementById('editModal').classList.add('hidden');
      currentEditItem = null;
    });

    // Close modal on cancel
    document.getElementById('cancelButton').addEventListener('click', () => {
      document.getElementById('editModal').classList.add('hidden');
      currentEditItem = null;
    });

    // Function to calculate and update totals
    function updateTotals() {
      let subtotal = 0;
      document.querySelectorAll('.cart-item').forEach(item => {
        const checkbox = item.querySelector('.select-item');
        if (checkbox.checked) {
          const price = parseFloat(item.getAttribute('data-price'));
          const quantity = parseInt(item.querySelector('.quantity').value);
          subtotal += price * quantity;
        }
      });

      const tax = subtotal * taxRate;
      const total = subtotal + tax + shippingCost;

      subtotalEl.textContent = subtotal.toFixed(2);
      taxEl.textContent = tax.toFixed(2);
      totalEl.textContent = total.toFixed(2);
    }

    // Initialize totals on page load
    updateTotals();

    // Function to collect selected items
    function getCheckedItems() {
    const selectedItems = [];
    document.querySelectorAll('.cart-item').forEach(item => {
        const checkbox = item.querySelector('.select-item');
        if (checkbox.checked) {
            selectedItems.push({
                cartId: item.getAttribute('data-cart-id'),
                productId: item.getAttribute('data-product-id'),
                name: item.getAttribute('data-name'),
                price: parseFloat(item.getAttribute('data-price')),
                quantity: parseInt(item.querySelector('.quantity').value),
            });
        }
    });
    return selectedItems; // Returns an array of selected items
  }


    // Handle checkout
    document.querySelector('button.checkout').addEventListener('click', async () => {
    const checkedItems = getCheckedItems(); // Collect checked items
    if (checkedItems.length === 0) {
        alert('No items selected for checkout.');
        return;
    }

    try {
        const response = await fetch('/checkout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ items: checkedItems }), // Send items
        });

        if (response.ok) {
            window.location.href = '/checkout'; // Redirect to the GET route
        } else {
            const error = await response.json();
            alert(error.message || 'Failed to process your checkout.');
        }
    } catch (err) {
        console.error('Error during checkout:', err);
        alert('An error occurred. Please try again.');
    }
});



  </script>
  <script type="module" src="../script/script.js"></script>
</body>
</html>
